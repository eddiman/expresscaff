<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:paddingBottom="24dp"
    android:paddingStart="20dp"
    android:paddingEnd="24dp"
    android:orientation="horizontal"
    android:textColor="@color/myPrimaryColor"
    >




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/paymentshopname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textSize="16sp"
        android:id="@+id/paymentaddress"
        android:layout_below="@+id/paymentshopname"
        android:layout_alignStart="@+id/paymentshopname" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/paymentaddress"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/paymentprice"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/paymentoptions"
        android:textColor="@color/myPrimaryColor"
        android:textSize="18sp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:elevation="0dp"
        android:text="@string/pay"
        android:backgroundTint="@color/myAccentColor"
        android:textColor="@color/background"
        android:textSize="16sp"
        android:id="@+id/paybutton"
        android:layout_alignBottom="@+id/androidpayImage"
        android:layout_alignParentEnd="true" />



    <ImageView
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:id="@+id/androidpayImage"
        android:background="@drawable/googlewalletlogo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paymentoptions"
        android:background="@drawable/ic_arrow_down"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/cardinfo"
        android:layout_below="@+id/paymentaddress"
        android:layout_toEndOf="@+id/imageView" />
</RelativeLayout>
