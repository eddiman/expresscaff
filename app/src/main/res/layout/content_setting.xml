<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_setting" tools:context="com.info212.expresscaff.Setting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Settings"
        android:id="@+id/h1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#686868"
        android:layout_below="@id/h1"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/d1_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Card"
        android:id="@+id/d1_2"
        android:textSize="16dp"
        android:layout_below="@+id/d1_1"
        android:layout_alignStart="@+id/d1_1"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="E-mail"
        android:id="@+id/d1_3"
        android:textSize="16dp"
        android:layout_below="@+id/d1_2"
        android:layout_alignStart="@+id/d1_2"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@drawable/ic_mode_edit_24dp"
        android:layout_alignTop="@+id/h1"
        android:layout_alignEnd="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="App Settings"
        android:id="@+id/h2"
        android:textStyle="bold"
        android:layout_below="@+id/d1_3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#686868"
        android:layout_below="@id/h2"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maximum distance to closest coffee shop"
        android:id="@+id/d2_1"
        android:textSize="12dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/distSlider"
        android:indeterminate="false"
        android:layout_below="@+id/d2_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maximum Distance"
        android:id="@+id/d2_2"
        android:textSize="12dp"
        android:layout_below="@+id/distSlider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About"
        android:id="@+id/h3"
        android:textStyle="bold"
        android:layout_below="@+id/d2_2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#686868"
        android:layout_below="@id/h3"
        android:id="@+id/view3" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Privacy"
        android:id="@+id/textView5"
        android:textSize="16dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/d1_3"
        android:layout_marginTop="20dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Version: 0.66"
        android:id="@+id/textView7"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="EDIT"
        android:id="@+id/editText"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="1dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:entries="@array/settings"
        android:layout_below="@+id/view3"
        android:layout_toStartOf="@+id/d2_1"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
