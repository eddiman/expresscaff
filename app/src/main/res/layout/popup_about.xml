<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:paddingBottom="24dp"
    android:paddingStart="20dp"
    android:paddingEnd="24dp"

    android:orientation="horizontal"
    android:textColor="@color/myPrimaryColor"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/barcodetextpop"
        android:text="This was a project for INFO212 - System development, Fall 2015, by Edvard Pires Bjørgen, Veronica Wachek Hansen and Vegard V. Sjøen."
        android:layout_below="@+id/barcodepop"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/lolcaff"
        android:layout_below="@+id/barcodetextpop"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
